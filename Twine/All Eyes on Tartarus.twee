      ctx.beginPath();
      ctx.rect(margin + 20, contentAreaTop, windowWidth - 40, contentAreaHeight);
      ctx.clip();
      
      // Display messages
      const lineHeight = 24;
      const visibleMessages = [...dialogueMessages].reverse(); // Show newest messages first
